<button class="weui-btn addsize" type="primary" plain="true">
  添加</button>


<view class="weui-cells weui-cells_after-title">
  <checkbox-group bindchange="checkboxChange">
    <label class="xcell weui-check__label" wx:for="{{checkboxItems}}" wx:key="value">
      <checkbox class="weui-check" value="{{item.value}}" checked="{{item.checked}}" />

      <view class="weui-cell__hd weui-check__hd_in-checkbox">
        <icon class="weui-icon-checkbox_circle" type="circle" size="23" wx:if="{{!item.checked}}"></icon>
        <icon class="weui-icon-checkbox_success" type="success" size="23" wx:if="{{item.checked}}"></icon>
      </view>
      <view class='weui-cell__bd'>
        订单编号:{{item.name}}
      </view>
      <view class='weui-cell__bd'>
        商品编号:{{item.name}}
      </view>
      <view class='weui-cell__bd'>
        商品名称:{{item.name}}
      </view>
      <view class='weui-cell__bd'>
        订单数量:{{item.value}}
      </view>
      <view class='weui-cell__bd'>
        总发货量:{{item.value}}
      </view>
      <view class='weui-cell__bd'>
        订购单价:{{item.value}}
      </view>

      <view class='weui-cell' wx:if="{{item.checked}}">
        <input class='inputChoice' catchtap="handleTap2" placeholder="数量" />

        <picker class='lieChoice' catchtap="handleTap2" bindchange="bindAccountChange" data-can='{{item.name}}' value="{{item.accountIndex}}" range="{{accounts}}">
          <view class="weui-select">{{accounts[item.accountIndex]}}</view>
        </picker>

      </view>

    </label>

  </checkbox-group>

</view>