<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}" >
  <view slot="backText">返回</view>
  <view slot="content">添加</view>
</cu-custom>
<view class="page">
  <form bindsubmit="showTopTips">
    <view class="weui-cells weui-cells_after-title">
      
      <view class="cu-form-group border">
		<view class="title">地址：</view>
		<input placeholder="请选择地址"></input>
		<text class="cuIcon-locationfill text-orange"></text>
      </view>

     <view class="daily_block  margin-top">
        <view class="title_daily">
          今日日报：
        </view>
        <view class="content_daily">
        <view class="cu-form-group">
		<textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaAInput" placeholder="请输入今日日报"></textarea>
	</view>
        </view>
      </view>

      <view class="daily_block  margin-top">
        <view class="title_daily">
          明日计划：
        </view>
        <view class="content_daily">
        <view class="cu-form-group">
		<textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaAInput" placeholder="请输入明日计划"></textarea>
	</view>
        </view>
      </view>

      <view class="daily_block  margin-top">
        <view class="title_daily">
          今日总结：
        </view>
        <view class="content_daily">
        <view class="cu-form-group">
		<textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaAInput" placeholder="请输入今日总结"></textarea>
	</view>
        </view>
      </view>


     <view class="cu-bar bg-white margin-top">
		<view class="action">
			图片上传
		</view>
		<view class="action">
			{{imgList.length}}/4
		</view>
     </view>
     <view class="cu-form-group">
		<view class="grid col-4 grid-square flex-sub">
			<view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
				<image src='{{imgList[index]}}' mode='aspectFill'></image>
				<view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
					<text class="cuIcon-close"></text>
				</view>
			</view>
			<view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<4}}">
				<text class="cuIcon-cameraadd"></text>
			</view>
		</view>
	</view>

    </view>

    <view class="weui-btn-area">
    
      <button class="weui-btn" formType="submit" type="primary">提交</button>
    </view>

  </form>
</view>