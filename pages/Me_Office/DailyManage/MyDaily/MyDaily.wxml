<cu-custom bgColor="bg-gradual-blue" isCustom="{{true}}" goUrl='/pages/Me_Office/MyDaily/MyDailyAdd'>
  <view slot="content">我的日报</view>
</cu-custom>

<modal hidden="{{hiddenmodalput}}" confirm-text="回复" cancel-text="取消" bindcancel="cancel" bindconfirm="confirm">
  <view class="weui-cells_pf">
    <view class="weui-cell2">
      <view class="weui-cell__bd2">
        <textarea placeholder='请输入回复内容' class='weui-cell__bd2text'></textarea>
      </view>
    </view>
  </view>
</modal>


<view class="cu-bar bg-white search fixed" style="top:{{CustomBar}}px;">
  <view class="search-form round">
    <text class="cuIcon-search"></text>
    <input type="text" placeholder="输入搜索的关键词" bindinput="cxsearch" name="word" value='{{word}}' confirm-type="search"></input>
  </view>
  <view class="action">
    <button class="cu-btn bg-gradual-blue shadow-blur round" bindtap="clicksearch">搜索</button>
  </view>
</view>

<view class='page'>
  <view class='contentView' wx:for="{{shuju}}" wx:for-item="item">
    <view class="cu-card dynamic {{isCard?'no-card':''}}">
      <view class="cu-item shadow">
        <view class="cu-list menu-avatar" bindtap='mingxi'>
          <view class="cu-item">
            <!-- http://mecs.ip165.com/ -->
            <view class="cu-avatar round lg" style="background-image:url(http://mecs.ip165.com/{{item.touxiang}});"></view>
            <view class="content flex-sub">
              <view>{{item.employ}}</view>
              <view class="text-gray text-sm flex justify-between">
                {{item.createtime}}
              </view>
            </view>
          </view>
        </view>
        <view class="text-content">
          日报内容：{{item.Content}}
        </view>
        <view class="grid flex-sub padding-lr col-3 grid-square">
          <view class="bg-img" style="background-image:url(http://mecs.ip165.com/{{item.photo1}});">
          </view>
          <view class="bg-img" style="background-image:url(http://mecs.ip165.com/{{item.photo2}});">
          </view>
          <view class="bg-img" style="background-image:url(http://mecs.ip165.com/{{item.photo3}});">
          </view>
        </view>
        <view class="wz_css">
          <view class="wz_css01">
            <image src="http://mecs.ip165.com/WeiXin/Style/Image/tubiao/come_from_lbs.png" class="wz_css01_img"></image>
          </view>
          <view class="wz_css02">
            {{item.rbAddress}}
          </view>
          <view class="text-gray text-sm text-right padding dz_css">
            <view bindtap='dianzan' data-id="{{item.id}}">
              <text class="cuIcon-appreciatefill margin-lr-xs"></text> {{item.fabulouslist.length==null ? '0' : item.fabulouslist.length}}</view>
            <view>
              <text class="cuIcon-messagefill margin-lr-xs" bindtap='modalinput'></text> {{item.replylist.length==null ? '0' : item.replylist.length}}</view>
          </view>
        </view>
        <view class="dz_list">
          <view class="dz_list01">
            <image src="http://mecs.ip165.com/WeiXin/Style/Image/tubiao/praise_h.png" class="dz_list01_img"></image>
          </view>
          <view class="dz_list02">
            <text wx:for="{{item.fabulouslist}}" wx:for-item="dz"> {{dz.Employ}} </text>
          </view>
        </view>

        <view class="cu-list menu-avatar comment solids-top">

          <view wx:for="{{item.replylist}}" wx:for-item="hf">
            <!-- <view class="cu-avatar round" style="background-image:url(http://mecs.ip165.com/{{item.photo}});"></view> -->


            <view class="bg-grey padding-sm radius margin-top-sm  text-sm">
              <view class="flex" wx:if="{{hf.beihuifuren ==null}}">
                <view>{{hf.employ}}：</view>
                <view class="flex-sub">{{hf.replyContent}}</view>
              </view>
              <view class="flex" wx:else>
                <view>{{hf.employ}} 回复 {{hf.beihuifuren}}：</view>
                <view class="flex-sub">{{hf.replyContent}}</view>
              </view>
            </view>

            <!-- <view class="bg-grey padding-sm radius margin-top-sm  text-sm" wx:else>
              <view class="flex">
